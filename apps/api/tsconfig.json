{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "lib": ["ES2020"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/services/*": ["./src/services/*"],
      "@/utils/*": ["./src/utils/*"],
      "@aiprojectteam/shared": ["../../packages/shared/src"],
      "@aiprojectteam/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"]
}
